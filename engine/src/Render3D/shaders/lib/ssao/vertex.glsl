/////////////////////////////////////////////////////////////
void ssao(mat4 projection, vec3 fragCameraPos);

/////////////////////////////////////////////////////////////
///////////////////////// VARYING ///////////////////////////
/////////////////////////////////////////////////////////////
out vec2 v_fragScreenPos;

/////////////////////////////////////////////////////////////
////////////////////////// MAIN /////////////////////////////
/////////////////////////////////////////////////////////////
void ssao(mat4 projection, vec3 fragCameraPos) {
    vec4 screenPos = projection * vec4(fragCameraPos, 1.0);
    v_fragScreenPos = (screenPos / screenPos.w).xy;
}

