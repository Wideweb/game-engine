struct SpotLight {
    vec3 position;

    vec3 ambient;
    vec3 diffuse;
    vec3 specular;

    float constant;
    float linear;
    float quadratic;

    samplerCube shadowMap;
    float farPlane;
    float bias;
    float pcfDiskRadius;
    int pcfSamples;
};

