//////////////////////// DEFINES ////////////////////////////
/////////////////////////////////////////////////////////////
const int c_maxSpotLights = 4;

/////////////////////////////////////////////////////////////
//////////////////////// UNIFORMS ///////////////////////////
/////////////////////////////////////////////////////////////
uniform int u_spotLightsNumber;
uniform SpotLight u_spotLights[c_maxSpotLights];

