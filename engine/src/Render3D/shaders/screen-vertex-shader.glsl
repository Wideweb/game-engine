#version 330 core

/////////////////////////////////////////////////////////////
//////////////////////// ATTRIBUTES /////////////////////////
/////////////////////////////////////////////////////////////
layout(location = 0) in vec2 a_vertexPosition;
layout(location = 1) in vec2 a_vertexTextureCoord;
layout(location = 2) in vec4 a_vertexColor;

/////////////////////////////////////////////////////////////
//////////////////////// UNIFORMS ///////////////////////////
/////////////////////////////////////////////////////////////
uniform mat4 u_projection;
uniform mat4 u_model;

/////////////////////////////////////////////////////////////
///////////////////////// VARYING ///////////////////////////
/////////////////////////////////////////////////////////////
out vec2 v_texCoord;
out vec4 v_color;

/////////////////////////////////////////////////////////////
////////////////////////// MAIN /////////////////////////////
/////////////////////////////////////////////////////////////
void main() {
    v_texCoord = vec2(a_vertexTextureCoord.x, a_vertexTextureCoord.y);
    v_color = a_vertexColor;
    gl_Position = u_projection * u_model * vec4(a_vertexPosition, 0.0, 1.0);
}