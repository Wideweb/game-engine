#version 330 core

/////////////////////////////////////////////////////////////
//////////////////////// ATTRIBUTES /////////////////////////
/////////////////////////////////////////////////////////////
layout(location = 0) in vec3 a_vertexPosition;

/////////////////////////////////////////////////////////////
//////////////////////// UNIFORMS ///////////////////////////
/////////////////////////////////////////////////////////////
uniform mat4 u_model;
uniform mat4 u_view;
uniform mat4 u_projection;

/////////////////////////////////////////////////////////////
///////////////////////// VARYING ///////////////////////////
/////////////////////////////////////////////////////////////
out vec3 v_texCoord;

void main() {
    v_texCoord = a_vertexPosition;
    vec4 pos = u_projection * u_view * u_model * vec4(a_vertexPosition, 1.0);
    gl_Position = pos.xyww;
}