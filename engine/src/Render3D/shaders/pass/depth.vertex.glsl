#version 330 core

/////////////////////////////////////////////////////////////
//////////////////////// ATTRIBUTES /////////////////////////
/////////////////////////////////////////////////////////////
layout(location = 1) in mat4 a_model;
layout(location = 5) in vec3 a_vertexPosition;

/////////////////////////////////////////////////////////////
//////////////////////// UNIFORMS ///////////////////////////
/////////////////////////////////////////////////////////////
uniform mat4 u_view;
uniform mat4 u_projection;

#include "lib/skelet/vertex.glsl"

/////////////////////////////////////////////////////////////
////////////////////////// MAIN /////////////////////////////
/////////////////////////////////////////////////////////////
void main() {
    mat4 transform = getSkeletVertexTransform();
    gl_Position = u_projection * u_view * a_model * transform * vec4(a_vertexPosition, 1.0f);
}
